---

{faIcon ? (
  <div class={className} style={`width: ${size}px; height: ${size}px; display: inline-block; transform: scale(0.7);`} set:html={faIcon.html[0]} />
) : iconPath ? (
  <svg 
    width={size} 
    height={size} 
    viewBox="0 0 24 24" 
    fill="none" 
    stroke="currentColor" 
    stroke-width="2" 
    stroke-linecap="round" 
    stroke-linejoin="round" 
    class={className}
    set:html={iconPath}
  />
) : (
  <span class={`inline-block w-${size/4} h-${size/4} bg-red-200 ${className}`} title={`Missing icon: ${name}`}></span>
)}